%ul.galleria
	= list_of @item.children.sort_by &:path do |image|
		%a{ href: image.path(rep: :preview) }
			%img{ src: image.path(rep: :thumbnail), data: { big: image.path } }

:coffee
	Galleria.loadTheme '/galleria/themes/classic/galleria.classic.min.js'
	Galleria.run '.galleria', {
		# put options here (see http://galleria.io/docs/options/)
		transition: 'fadeslide'
		lightbox:   true
	}
